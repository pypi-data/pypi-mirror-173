{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "JSON schema for TkWidgetsPlus Formats",
    "type": "object",
    "default": {},
    "definitions": {
        "ExampleNames": {
            "examples": [
                "markup.heading.1",
                "markup.heading.2",
                "markup.heading.3",
                "markup.heading.4",
                "markup.heading.5",
                "markup.heading.6",
                "markup.underline",
                "markup.strikethrough",
                "markup.italic",
                "markup.bold",
                "markup.list.unnumbered",
                "markup.list.numbered",
                "markup.codeblock"
            ]
        }
    },
    "properties": {
        "patterns": {
            "description": "A list of patterns",
            "type": [
                "array",
                "object"
            ],
            "default": {},
            "properties": {
                "name": {
                    "description": "The name of the capture.",
                    "$ref": "#/definitions/ExampleNames"
                },
                "include": {
                    "description": "A refrance to a diffrent pattern. Must prepend with `#`",
                    "type": "string"
                },
                "begin": {
                    "description": "Regular expression to match",
                    "type": "string"
                },
                "end": {
                    "description": "Regular expression to match",
                    "type": "string"
                },
                "beginCaptures": {
                    "$ref": "#/properties/patterns/properties/captures"
                },
                "endCaptures": {
                    "$ref": "#/properties/patterns/properties/captures"
                },
                "captures": {
                    "description": "captures",
                    "type":"object",
                    "default": {},
                    "patternProperties": {
                        "^[0-9]{1,}$": {
                            "description": "The group to interprit",
                            "$ref": "#/properties/patterns/items"
                        }
                    },
                    "additionalProperties": false
                },
                "patterns": {
                    "$ref": "#/properties/patterns"
                },
                "definitions": {
                    "$ref": "#/properties/definitions"
                },
                "while": {
                    "description": "test"
                },
                "match": {
                    "description": "test"
                },
                "comment": {
                    "description": "test"
                },
                "contentName": {
                    "description": "test"
                }
            },
            "items": {
                "$ref": "#/properties/patterns"
            }
        },
        "definitions": {
            "description": "A map of formats",
            "type": "object",
            "default": {},
            "additionalProperties": {
                "description": "The pattern refrance id",
                "$ref": "#/properties/patterns"
            }
        }
    }
}