/***********************************************
         Invenio Theme Dropdown Overrides
***********************************************/

.ui.scrolling.dropdown{
  .menu {
    min-width: @menuMinWidth !important;
  }
}

.ui.floating.dropdown > .menu.fluid-menu-mobile{
  width: calc(100vw - 2 * @defaultPadding);
  left: calc(-100vw/2 + 100%/2 + @defaultPadding);
}