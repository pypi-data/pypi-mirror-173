#!python

import sys
import shlex
import socket

if len(sys.argv) < 2:
    print("usage: thorin <message>")
    sys.exit(0)

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
sock.connect(("127.0.0.1", 8045))

def recvall(sock):
    data = b""
    while True:
        packet = sock.recv(1024)
        data += packet
        if len(packet) < 1024:
            break
    return data

def durin(message):
    message = message + "\n"
    sock.send(message.encode())
    return recvall(sock).decode().strip()

message = " ".join(map(shlex.quote, sys.argv[1:]))
print(durin(message))
